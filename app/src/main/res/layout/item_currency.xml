<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >

    <TextView
        android:id="@+id/tv_initial"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_default"
        android:layout_marginVertical="@dimen/padding_extra_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_currency_icon"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        tools:text="C"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_default"
        app:layout_constraintStart_toEndOf="@id/tv_initial"
        app:layout_constraintEnd_toStartOf="@id/tv_symbol"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        tools:text="Bitcoin"
        />

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/padding_default"
        app:layout_constraintEnd_toStartOf="@id/iv_to"
        android:gravity="center_vertical"
        tools:text="BTN"/>

    <ImageView
        android:id="@+id/iv_to"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/padding_extra_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_arrow_right"
        />

</androidx.constraintlayout.widget.ConstraintLayout>